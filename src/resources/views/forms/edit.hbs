<div class="mt-4 ">
    <h3 class="text-center">Thêm sản phẩm</h3>
    <form action="/products/{{product._id}}/?_method=PUT" method="post">
    <div class="mb-3">
        <label for="name" class="form-label" >Product's Name</label>
        <input type="text" name="name" id="name"class="form-control" value="{{product.name}}" required>  
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Product's Price</label>
        <input type="text" name="price" id="price" class="form-control" value="{{product.price}}" required>  
    </div>
    <div class="mb-3">
        <label for="quanlity" class="form-label">Product's Quanlity</label>
        <input type="number" name="quanlity" id="quanlity"class="form-control" value="{{product.quanlity}}" required>  
    </div>
    <button type="submit" class="btn btn-primary mb-4">Submit</button>
    </form>
    
</div>